	$("#search").on("keyup", function() {
		var value = $(this).val();
		
		$(".rowakteri").each(function(index) {
		
				$row = $(this);
				var id = $row.attr('id').toLowerCase();

				if (id.indexOf(value.toLowerCase()) < 0 ) {
					$row.hide();
				}
				else {
					$row.show();
				}

		});
	});

});	
</script>

