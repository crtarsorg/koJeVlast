            {% block content %}

<link rel="stylesheet" href="{{site.uri.public}}/css/xcustom.css" type="text/css" >	


			
<section>	
	<div class="col-xs-6 col-sm-6">
		<h4>Akteri</h4>
	</div>
	
	<div class="col-xs-6 col-sm-6">
