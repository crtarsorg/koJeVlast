							<a href="promene/edit/{{pr.pid}}"  >{% if pr.pod %}{{ pr.pod|date("d.m.Y") }}{% endif %}</a>
						</div>

						<div class="col-sm-1">
							<a href="promene/edit/{{pr.pid}}"  >{% if pr.pdo %}{{ pr.pdo|date("d.m.Y") }}{% endif %}</a>
						</div>							
						
	</div>				
				
					
                    {% endfor %}
                {% endif %}						
<div class="col-xs-12" style="height:50px;"></div>					
				
            {% endblock %}
			
			
			
{% block page_scripts %}

<script>
//live search 			
$( document ).ready(function() {
			
	$("#search").on("keyup", function() {
		var value = $(this).val();
		
		$(".rowpromena").each(function(index) {
		
				$row = $(this);
				var id = $row.attr('id').toLowerCase();

				if (id.indexOf(value.toLowerCase()) < 0 ) {
					$row.hide();
				}
				else {
					$row.show();
				}

		});
	});

});	
</script>				
{% endblock %}		