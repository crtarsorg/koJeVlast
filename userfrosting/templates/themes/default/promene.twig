			{# If we are not using server-side pagination, then just render all results immediately #}
                {% if not paginate_server_side %}
					{% for pr in promene %}
					
					{% set rowid= pr.aime ~ pr.aprezime ~ pr.arodjen ~ pr.azanimanje ~ pr.snaziv ~ pr.funkcija ~ pr.knaziv   %}

    <div class="row rowpromena" id="{{rowid|replace({" " : "","," : "","." : ""}) }}" >					
        
