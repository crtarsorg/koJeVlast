							<a href="promene/edit/{{pr.pid}}"  >{{pr.aprezime}}</a>
						</div>
						
						<div class="col-sm-1">
							<a href="promene/edit/{{pr.pid}}"  >{{pr.arodjen}}</a>
						</div>						

						<div class="col-sm-1">
							<a href="promene/edit/{{pr.pid}}"  >{{pr.snaziv}}</a>
						</div>

